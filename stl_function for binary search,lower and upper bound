// ekta number er lower bound ar upper bound same hole oi number ta array te nai
//ekta number er lower bound use kore amra oi number er index ber korte pari..ei index use kore oi number er age koita element ace ta pete pari. 
//lower bound returns a pointer that returns a value that is not less than number..
//upper bound returns a value that is always greater than given value..if not find then print always 0.
#include<bits/stdc++.h>
using namespace std;
int main()
{
   //stl function using array for upper and lower bound
   int a[3]={1,2,3};
   int up=upper_bound(a,a+3,3)-a;
   int lo=lower_bound(a,a+3,3)-a;
   cout<<up<<endl;
   //stl function using vector for upper and lower bound
   vector<int<a={1,2,3};
   int up=upper_bound(a.begin(),a.end(),3)-a.begin();
   int lo=lower_bound(a.begin(),a.end(),3)-a.begin();
   cout<<up<<" "<<lo<<endl;
   stl function for binary search
   int ans=binary_search(a,a+3,4);
   this function checks this function is still available in
   this array or not..

}
